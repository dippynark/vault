<PageHeader as |p|>
  <p.top>
    {{key-value-header
      baseKey=model
      path="vault.cluster.access.method"
      root=root
      showCurrent=true
    }}
  </p.top>
  <p.levelLeft>
    <h1 class="title is-3">
      Configure {{get (find-by "type" model.type (mountable-auth-methods)) "displayName"}}
    </h1>
  </p.levelLeft>
  <p.levelRight>
    <div class="field is-grouped">
      <div class="control">
        {{#link-to
          "vault.cluster.access.method"
          model.id
          class="button is-ghost is-compact"
          data-test-backend-view-link=true
        }}
          View method
          <Chevron @isButton={{true}} />
        {{/link-to}}
      </div>
    </div>
  </p.levelRight>
</PageHeader>

{{section-tabs model}}
{{outlet}}
